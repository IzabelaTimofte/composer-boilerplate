{
    "provide": {
        "drupal/lightning": "*"
    },
    "config": {
        "bin-dir": "bin/",
        "secure-http": false,
        "platform": {
            "php": "7"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "http://packages.dreamproduction.com"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@composer run-script drupal-scaffold",
	    "@composer run-script checkout-htaccess",
	    "@composer run-script checkout-robotos"
        ],
	"checkout-htaccess": "git checkout docroot/.htaccess",
	"checkout-robots": "git checkout docroot/robots.txt",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "blt-alias": "blt install-alias -y --ansi",
        "nuke": [
            "rm -rf vendor composer.lock docroot/core docroot/modules/contrib docroot/profiles/contrib docroot/themes/contrib",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ],
        "install-phantomjs": [
            "rm -rf vendor/bin/phantomjs",
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "extra": {
        "enable-patching": true,
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        },
         "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
               "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "736066 - ajax.js insert command sometimes wraps content in a div, potentially producing invalid HTML and other bugs":
                "https://www.drupal.org/files/issues/2018-03-14/736066-296-328.patch",
                "2559961 - ManyToOneHelper ignores group configuration for some cases and forces INNER joins":
                "https://www.drupal.org/files/issues/manytoonehelper_ignores-2559961-29-8.3.x.patch",
                "2893029 - StringTranslationTrait consumers cannot be reliably serialized without DependencySerializationTrait":
                "https://www.drupal.org/files/issues/2893029-9.patch",
                "1356276 - Allow profiles to provide a base/parent profile and load them in the correct order":
                "https://www.drupal.org/files/issues/drupal-n1356276-417-d8.5.x.patch",
                "2880374 - Experimental modules should not have warnings after being installed":
                "https://www.drupal.org/files/issues/2880374-remove-experimental-warnings-6.patch",
                "2869592 - Disabled update module shouldn't produce a status report warning":
                "https://www.drupal.org/files/issues/2869592-remove-update-warning-7.patch",
                "2885441 - EntityReferenceAutocompleteWidget should define its size setting as an integer":
                "https://www.drupal.org/files/issues/2885441-12.patch",
                "2652850 - Title for details form elements ...":
                "https://www.drupal.org/files/issues/2652850-40.patch"
            },
            "drupal/video": {
                "2893473 - Missing type for video source.":
                "https://www.drupal.org/files/issues/video-missing-source-type-2893473-3-8.1.2.patch"
            },
            "drupal/entity_embed": {
                "2832504 - Send the CKEditor instance ID to the embed.preview route":
                "https://www.drupal.org/files/issues/2832504-2.patch"
            },
            "drupal/entity_browser": {
                "2865928 - The View widget should filter based on field settings":
                "https://www.drupal.org/files/issues/entity-browser-view-context-2865928-14.patch",
                "2721665 - Problems with multilingual entities":
                "https://www.drupal.org/files/issues/entity_browser-problems-with-multilingual-2721665-27.patch",
                "2899792 - Notice from ImageWidget::validateRequiredFields after saving":
                "https://www.drupal.org/files/issues/entity-browser-image-widget-conflict-28997922-2-D8.patch"
            },
            "acquia/blt": {
                "Restricts PHPCS to check for modified files only" :
                "https://patch-diff.githubusercontent.com/raw/acquia/blt/pull/2126.patch"
            }
        }
    },
    "require": {
        "cweagans/composer-patches": "^1.5.0",
        "drupal/core": "^8.5",
        "drupal.project/media_management_complex": "*",
        "drupal/config_update": "^1.1",
        "drupal/metatag": "^1.0",
        "drupal/token": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/pathauto": "^1.0",
        "drupal/contact_storage": "^1.0",
        "drupal/diff": "^1.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "drupal.project/views_entity_translation_links": "*",
        "drupal.project/dp_misc": "*"
    }
}
